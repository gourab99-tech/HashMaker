<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrendFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:verticalScrollbarPosition="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:orientation="vertical"
            android:weightSum="180">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="9"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/trending_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/harmattan"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:gravity="left"
                            android:text="Trending"/>
                        <TextView
                            android:id="@+id/trending_hashtags"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/harmattan"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="#this #that #okay #this #that #okay #this #that #okay #this #this #that #okay #this #that #okay #this #that #okay #this#this#this##this #that #okay #that #okay #that #okay #that #okay #that #okay #that #okay"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:typeface="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/buttonCopyContent1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/trend_btn"
                            android:padding="9dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/copy" />

                        <ImageButton
                            android:id="@+id/buttonShareContent1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/trend_btn"
                            android:padding="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_share_icon" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/trending_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/harmattan"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:gravity="left"
                            android:text="Trending"/>
                        <TextView
                            android:id="@+id/trending_hashtags"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/harmattan"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="#this #that #okay #this #that #okay #this #that #okay #this #this #that #okay #this #that #okay #this #that #okay #this#this#this##this #that"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:typeface="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="70dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/buttonCopyContent1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/trend_btn"
                            android:padding="9dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/copy" />

                        <ImageButton
                            android:id="@+id/buttonShareContent1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/trend_btn"
                            android:padding="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_share_icon" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>